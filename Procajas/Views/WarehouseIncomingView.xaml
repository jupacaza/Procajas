<UserControl x:Class="Procajas.Views.WarehouseIncomingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:prism="http://prismlibrary.com/" 
             prism:ViewModelLocator.AutoWireViewModel="True"
             xmlns:views="clr-namespace:Procajas.Views">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        
        <StackPanel Grid.Column="0">
            <TextBlock x:Uid="materialTextBlock" HorizontalAlignment="Left" Margin="5" TextWrapping="Wrap" Text="Material:" VerticalAlignment="Top"/>
            <TextBox HorizontalAlignment="Left" Height="23" Width="200" Margin="5" TextWrapping="Wrap" VerticalAlignment="Top" />

            <TextBlock x:Uid="quantityTextBlock" HorizontalAlignment="Left" Margin="5" TextWrapping="Wrap" Text="Cantidad:" VerticalAlignment="Top"/>
            <TextBox HorizontalAlignment="Left" Height="23" Width="200" Margin="5" TextWrapping="Wrap" VerticalAlignment="Top"/>     

            <TextBlock x:Uid="locationTextBlock" HorizontalAlignment="Left" Margin="5" TextWrapping="Wrap" VerticalAlignment="Top" Text="Ubicación:"/>
            <TextBox HorizontalAlignment="Left" Height="23" Width="200" Margin="5" TextWrapping="Wrap" VerticalAlignment="Top"/>
        </StackPanel>
        
        <StackPanel Grid.Column="1">
            <TextBlock x:Uid="dateTextBlock" HorizontalAlignment="Left" Margin="5" TextWrapping="Wrap" Text="Fecha:" VerticalAlignment="Top"/>
            <DatePicker HorizontalAlignment="Left" Margin="5" VerticalAlignment="Top"/>

            <TextBlock x:Uid="invoiceTextBlock" HorizontalAlignment="Left" Margin="5" TextWrapping="Wrap" Text="Factura:" VerticalAlignment="Top"/>
            <TextBox HorizontalAlignment="Left" Height="23" Width="200" Margin="5" TextWrapping="Wrap" VerticalAlignment="Top"/>

            <Button x:Uid="acceptButton" Content="xAceptar" Height="23" Width="50" Margin="5" />
        </StackPanel>
    </Grid>
</UserControl>
